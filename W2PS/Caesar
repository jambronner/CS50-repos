#include <cs50.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main(int argc, string argv[])
{
    int k = atoi(argv[1]);
    if (argc != 2)
    {
        printf("Incorrect number of arguments. Try again. \n");
        return 1;
    }
    for(int i = 0; i < argc; i++)
    {
        for (int j = 0, n = strlen(argv[i]); j < n; j++)
        {
            // error for non-integer
            // right now, unable to error out for 20x...why??
           if (isdigit(argv[j]==0))
           {
               printf("Usage: ./caesar key \n");
               return 1;
           }
            // convert string to integer
            else
            {
                string code = get_string("plaintext: ");
                //check if the letter is uppercase or lowercase then convert
                printf("ciphertext:");
                for (int l = 0, o = strlen(code); l < o; l++)
                {
                    if islower(code[i])
                    printf("%c", (((code[l] + k) - 97) % 26) + 97);
                    else if isupper(code[l])
                    printf("%c", (((code[l] + k) - 65) % 26) + 65);
                //if neither then just print whatever it is
                else
                    printf("%c", code[l]);
                }
                
            }
            printf("\n");
            return 0;
           }  
        }
    }





